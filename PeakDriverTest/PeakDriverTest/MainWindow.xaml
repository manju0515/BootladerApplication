<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAN Communication Demo" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Send Message" Click="SendMessageButton_Click" Margin="5"/>
            <Button Content="Receive Message" Click="ReceiveMessageButton_Click" Margin="5"/>
            <TextBlock x:Name="ReceivedMessagesTextBlock" TextWrapping="Wrap" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
